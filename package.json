{
    "name": "boilerplate-js",
    "version": "1.0.0",
    "description": "Boilerplate for creating projects in the JavaScript programming language. It includes the basic configuration of tools such as Webpack, Babel, Jest, Express, ESLint and Prettier.",
    "author": "Łukasz Szymański",
    "license": "MIT",
    "main": "src/scripts/index.js",
    "private": true,
    "scripts": {
        "build": "webpack --config config/webpack/webpack.prod.js",
        "dev-server": "webpack serve --config config/webpack/webpack.dev.js",
        "eslint:check": "npx eslint .",
        "eslint:fix": "npx eslint --fix .",
        "heroku-postbuild": "npm run build",
        "prettier:check": "npx prettier --check .",
        "prettier:fix": "npx prettier --write .",
        "start": "node server/server.js",
        "test": "jest --config config/jest/jest.config.js",
        "test:coverage": "jest --config config/jest/jest.config.js --coverage",
        "test:watch": "jest --config config/jest/jest.config.js --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lszymanski7/boilerplate-js.git"
    },
    "bugs": {
        "url": "https://github.com/lszymanski7/boilerplate-js/issues"
    },
    "homepage": "https://github.com/lszymanski7/boilerplate-js#readme",
    "dependencies": {
        "@csstools/normalize.css": "^12.0.0",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.20.7",
        "@babel/core": "^7.20.7",
        "@babel/preset-env": "^7.20.2",
        "babel-jest": "^29.3.1",
        "babel-loader": "^9.1.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.3",
        "css-minimizer-webpack-plugin": "^4.2.2",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^27.1.7",
        "html-loader": "^4.1.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.0.2",
        "mini-css-extract-plugin": "^2.7.2",
        "prettier": "^2.8.1",
        "sass": "^1.57.1",
        "sass-loader": "^13.2.0",
        "style-loader": "^3.3.1",
        "terser-webpack-plugin": "^5.3.3",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.0",
        "webpack-merge": "^5.8.0"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
